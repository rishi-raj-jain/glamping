---
import { Image } from 'astro:assets';
import heroBadge from "./../../assets/images/hero--badge.svg"
import stars from "./../../assets/images/stars.png"
import drops from "./../../assets/images/drops.png"
import sectionBackground from "./../../assets/images/hero--background.jpeg"
import overlayImg from "./../../assets/images/dark-overlay-layer-doubled.png"
import sunrayImg from "./../../assets/images/sunray-30.png"
---
<section class="bg-no-repeat bg-cover bg-center lg:bg-center" style=`background-image: url(${sectionBackground.src})`>
    <!-- Image overlays -->
    <div class="absolute inset-0">
        <div class="w-full h-full relative">
          <div class="absolute inset-0 bg-overlay bg-no-repeat bg-cover" style=`background-image: url(${overlayImg.src})`></div>
          <div class="absolute inset-0 bg-overlay bg-no-repeat bg-cover" style=`background-image: url(${sunrayImg.src})`></div>
        </div>
    </div>
    <!-- Column layout -->
    <div class="grid grid-cols-12 gap-2">
        <!-- Helper column / delete later -->
        <div class="col-span-1 bg-gray-100"></div>
        <!-- Content column -->
        <div class="col-start-2 col-span-5 bg-red-100">
            <!-- Content wrapper -->
            <div class="flex flex-col text-white justify-between h-screen">
                <Image src={heroBadge} alt={"hero badge"} class="md:w-20 lg:w-40 fill-current"/>
                <h1 class="relative text-6xl lg:text-8xl">Okouzlete přírodou, investujte <span class="text-green-800 absolute left-0 bottom-8 rotate-[-15deg]">do</span>glampingu</h1>
                <!-- <Image src={stars} alt={" "} class="absolute"/>
                <Image src={drops} alt={" "} class="absolute"/> -->
            </div>
        </div>
        <div class="col-start-7 col-span-5 bg-red-100"></div>
        <!-- Helper column / delete later -->
        <div class="col-span-1 bg-gray-100"></div>
    </div>

</section>


