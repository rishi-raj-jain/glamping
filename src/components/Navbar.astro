---
import { Image } from 'astro:assets';
import heroBadge from "./../assets/images/hero--badge.svg"
---

<!-- Desktop menu -->
<div class="hidden md:block">
    <nav class="flex justify-between items-center h-20">
        <ul class="list-none flex uppercase text-xs">
            <li class="helvetica mr-10"><a href="#">Můj glamping™</a></li>
            <li class="helvetica mr-10"><a href="#">Glampiny-house™</a></li>
            <li class="helvetica mr-10"><a href="#">O nás</a></li>
            <li class="helvetica mr-10"><a href="#">Kontakt</a></li>
        </ul>
    </nav>
</div>

<!-- Mobile menu -->
<div class="flex items-center md:hidden">
    <span id="toggle-menu" class="z-[99999] uppercase">Menu</span>
    <label class="relative z-[99999] cursor-pointer pl-2 py-6" for="mobile-menu">
        <input class="peer hidden" type="checkbox" id="mobile-menu" />
        <div class="relative z-[99999] block h-[2px] w-7 bg-black before:absolute before:-top-2 before:block before:h-[2px] before:w-full before:bg-black before:transition-all before:duration-500 before:ease-out before:content-[''] after:absolute after:top-2 after:block after:h-[2px] after:w-full after:bg-black after:transition-all after:duration-500 after:ease-out after:content-[''] peer-checked:before:bg-white peer-checked:after:bg-white peer-checked:bg-transparent before:peer-checked:top-0 before:peer-checked:rotate-45 before:peer-checked:transform after:peer-checked:top-0 after:peer-checked:-rotate-45 after:peer-checked:transform"></div>
    </label>
    <!-- Fullscreen menu wrapper -->
    <div id="fullscreen-menu-wrapper" class="fixed inset-0 z-50 bg-dark-green-100 opacity-0">

        <div class="grid grid-cols-6 place-content-center h-screen px-[17.5px]">
             <!-- Content column -->
            <div class="col-start-1 col-span-6 text-left flex flex-col justify-center">

                <div>
                    <ul class="list-none gap-2 w-full text-white flex flex-col justify-center mb-8">
    
                        <li><a class="text-[24px] uppercase gtflexamed tracking-tight" href="#">Můj glamping™</a></li>
                        <li><a class="text-[24px] uppercase gtflexamed tracking-tight" href="#">Glampiny-house™</a></li>
                        <li><a class="text-[24px] uppercase gtflexamed tracking-tight" href="#">O nás</a></li>
                        <li><a class="text-[24px] uppercase gtflexamed tracking-tight" href="#">Kontakt</a></li>
                    </ul>
                    <ul class="flex flex-col gap-1 text-white">
                        <li><a class="text-[16px] font-thin" href="mailto:hello@glamping.cz">hello@glamping.cz</a></li>
                        <li><a class="text-[16px] font-thin" href="tel:+420585451251">+420 585 451 251</a></li>
                    </ul>
                </div>

                <div class="absolute bottom-0 right-0 mr-4 mb-4">
                    <Image src={heroBadge} alt="hero badge" class="animate-rotate max-w-[96px] fill-current"/>
                </div>

            </div>
        </div>
 </div>
        </div>

</div>



<script>
    import { isOpen } from '../navbar.js';
  
    // Set the store to true when the button is clicked
    function openNavbar() {
        isOpen.set(!isOpen.get());
    }
  
    // Add an event listener to the button
    document.getElementById('mobile-menu').addEventListener('click', () => {
        const fullMenuWrapper = document.getElementById('fullscreen-menu-wrapper');
        const menuText = document.getElementById('toggle-menu');

        // Toggle the opacity of the fullscreen menu
        fullMenuWrapper.classList.toggle('opacity-100');
        menuText.classList.toggle('text-white')

        // Toggle the text of the menu button
        if (fullMenuWrapper.classList.contains('opacity-100')) {
            menuText.innerHTML = "Zavřít"; // Change text to "Zavřít" when menu is open
        } else {
            menuText.innerHTML = "Menu"; // Change text back to "Menu" when menu is closed
        }

        // Toggle the state of the navbar
        openNavbar();
    });
</script>


