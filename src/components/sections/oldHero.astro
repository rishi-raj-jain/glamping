---
import { Image } from 'astro:assets';
import heroBadge from "./../../assets/images/hero--badge.svg"
import stars from "./../../assets/images/stars.png"
import drops from "./../../assets/images/drops.png"
import sectionBackground from "./../../assets/images/hero--background.jpeg"
import overlayImg from "./../../assets/images/dark-overlay-layer-doubled.png"
import sunrayImg from "./../../assets/images/sunray-30.png"
---
<section id="hero" class="relative flex flex-col justify-between h-screen bg-no-repeat bg-cover bg-center lg:bg-center" style=`background-image: url(${sectionBackground.src})`>

  <div class="absolute inset-0">
    <div class="w-full h-full relative">
      <div class="absolute inset-0 bg-overlay bg-no-repeat bg-cover" style=`background-image: url(${overlayImg.src})`></div>
      <div class="absolute inset-0 bg-overlay bg-no-repeat bg-cover" style=`background-image: url(${sunrayImg.src})`></div>
    </div>
  </div>


  <!-- Content -->
  <!-- Hero badge -->

  <div>
    <Image src={heroBadge} alt={"hero badge"} class="md:w-20 lg:w-40 fill-current"/>
  </div>

  <!-- Text -->
  
  <div class="flex flex-col text-white w-1/2">
    <h1 class="relative text-6xl">Okouzlete přírodou, investujte <span class="text-green-800 absolute left-0 bottom-8 rotate-[-15deg]">do</span>glampingu</h1>
    <Image src={stars} alt={" "} class="absolute"/>
    <Image src={drops} alt={" "} class="absolute right-0 bottom-0"/>
  </div>

</section>

