---
import { Image } from 'astro:assets';
import heroBadge from "./../../assets/images/hero--badge.svg"
import stars from "./../../assets/images/stars.png"
import drops from "./../../assets/images/drops.png"
import heroBackground from "./../../assets/images/hero--background.jpeg"
---
<section id="hero" class="relative flex flex-col justify-between h-screen bg-no-repeat bg-cover bg-center lg:bg-center" style="background-image: url(/src/assets/images/hero--background.jpeg)">
  <div class="absolute inset-0">
    <div class="w-full h-full relative">
      <div class="absolute inset-0 bg-overlay bg-no-repeat bg-cover" style="background-image: url('/src/assets/images/dark-overlay-layer-doubled.png')"></div>
      <div class="absolute inset-0 bg-overlay bg-no-repeat bg-cover" style="background-image: url('/src/assets/images/sunray-30.png')"></div>
    </div>
  </div>
  <!-- Content -->
  <!-- Hero badge -->
  <div>
    <Image src={heroBadge} alt={"hero badge"} class="md:w-20 lg:w-40 fill-current"/>
  </div>
  <!-- Text -->
  <div class="relative flex flex-col text-white bg-red-900 lg:w-1/2">
    <h1 class="font-gtflexa text-8xl">Okouzlete přírodou, investujte <span class="absolute text-green-800 left-0 bottom-10 rotate-[-15deg]">do</span>glampingu</h1>
    <Image src={stars} alt={" "} class="absolute"/>
    <Image src={drops} alt={" "} class="absolute right-0 bottom-0"/>
  </div>

</section>

