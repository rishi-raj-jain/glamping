---
import Circle from '../components/Circle.astro';
import Loader from '../components/Loader.astro'
import { join } from "node:path";
import { AstroFont } from "astro-font";
import '../styles/globals.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<AstroFont
		  config={[
			{
			  name: "GtFlexaMed",
			  src: [
				{
				  style: 'normal',
				  weight: 'medium',
				  path: join(process.cwd(), 'public', 'fonts', 'GT-Flexa-Extended-Medium.woff2')
				},
			  ],
			  preload: false,
			  display: "swap",
			  cssVariable: "font-gt",
			  fallback: "sans-serif",
			},
			{
			  name: "Bachelorette",
			  src: [
				{
				  style: 'normal',
				  weight: 'medium',
				  path: join(process.cwd(), 'public', 'fonts', 'Bachelorette_PERSONAL_USE_ONLY.woff2')
				},
			  ],
			  preload: false,
			  display: "swap",
			  cssVariable: "font-ba",
			  fallback: "sans-serif",
			},
			{
			  name: "HelNeuReg",
			  src: [
				{
				  style: 'normal',
				  weight: 'medium',
				  path: join(process.cwd(), 'public', 'fonts', 'HelveticaNeue-01.ttf')
				},
			  ],
			  preload: false,
			  display: "swap",
			  cssVariable: "font-he",
			  fallback: "sans-serif",
			},
		  ]}
		/>
	</head>
	<body>
		<!-- <Loader/> -->
		<Circle/>
		<slot />
	</body>
</html>


<script>
	import { isOpen } from '../navbar.js';

	isOpen.subscribe(open => {

		document.body.classList.toggle('overflow-hidden', open);
	});


  </script>